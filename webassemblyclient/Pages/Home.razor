@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<AuthorizeView>
    <Authorized>
        <p>Welcome, @context.User.Identity?.Name!</p>
        <p>You are authenticated and can access protected resources.</p>
        <p>Email: @context.User.FindFirst("email")?.Value</p>
    </Authorized>
    <NotAuthorized>
        <p>Welcome! Please log in to access protected resources.</p>
    </NotAuthorized>
</AuthorizeView>
